<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-5.0.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1761486506157-1" author="kush.banbah">
        <createSequence incrementBy="50" sequenceName="list_item_seq" startValue="1"/>
    </changeSet>
    <changeSet id="1761486506157-2" author="kush.banbah">
        <createSequence incrementBy="50" sequenceName="user_list_seq" startValue="1"/>
    </changeSet>
    <changeSet id="1761486506157-3" author="kush.banbah">
        <createSequence incrementBy="50" sequenceName="users_seq" startValue="1"/>
    </changeSet>
    <changeSet id="1761486506157-4" author="kush.banbah">
        <createTable tableName="list_item">
            <column name="item_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_listitem"/>
            </column>
            <column name="link" type="VARCHAR(255)"/>
            <column name="description" type="VARCHAR(255)"/>
            <column name="list_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="1761486506157-5" author="kush.banbah">
        <createTable tableName="user_list">
            <column name="list_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_list"/>
            </column>
            <column name="created_by_user_id" type="BIGINT"/>
            <column name="list_name" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1761486506157-7" author="kush.banbah">
        <createTable tableName="user_list_shared_with">
            <column name="user_list_list_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_list_sharedwith"/>
            </column>
            <column name="shared_with_user_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_user_list_sharedwith"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="1761486506157-8" author="kush.banbah">
        <createTable tableName="users">
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_users"/>
            </column>
            <column name="username" type="VARCHAR(255)"/>
            <column name="email" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>
    <changeSet id="1761486506157-10" author="kush.banbah">
        <addForeignKeyConstraint baseColumnNames="list_id" baseTableName="list_item"
                                 constraintName="FK_LISTITEM_ON_LIST" referencedColumnNames="list_id"
                                 referencedTableName="user_list"/>
    </changeSet>
    <changeSet id="1761486506157-11" author="kush.banbah">
        <addForeignKeyConstraint baseColumnNames="created_by_user_id" baseTableName="user_list"
                                 constraintName="FK_USER_LIST_ON_CREATEDBY_USER" referencedColumnNames="user_id"
                                 referencedTableName="users"/>
    </changeSet>
    <changeSet id="1761486506157-14" author="kush.banbah">
        <addForeignKeyConstraint baseColumnNames="shared_with_user_id" baseTableName="user_list_shared_with"
                                 constraintName="fk_uselisshawit_on_user" referencedColumnNames="user_id"
                                 referencedTableName="users"/>
    </changeSet>
    <changeSet id="1761486506157-15" author="kush.banbah">
        <addForeignKeyConstraint baseColumnNames="user_list_list_id" baseTableName="user_list_shared_with"
                                 constraintName="fk_uselisshawit_on_user_list" referencedColumnNames="list_id"
                                 referencedTableName="user_list"/>
    </changeSet>

</databaseChangeLog>